{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "platformio",
  "isShellCommand": true,
  "args": ["run"],
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "build"
    },
    {
      "taskName": "upload",
      "args": [
        "--target", "upload"
      ]
    }
  ]
}